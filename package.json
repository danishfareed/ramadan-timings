{
  "name": "@danishfareed/ramadan-timings",
  "version": "1.0.2",
  "description": "Minimal, zero-dependency Ramadan fasting times library â€” calculates true Fajr (dawn) and Maghrib (sunset) worldwide using built-in solar math.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build:cjs": "tsc --outDir dist/cjs",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ramadan",
    "fasting",
    "prayer-times",
    "fajr",
    "maghrib",
    "sunrise",
    "sunset",
    "islamic",
    "astronomy",
    "zero-dependency"
  ],
  "author": "danish",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/danishfareed/ramadan-timings.git"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
